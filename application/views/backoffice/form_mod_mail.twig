{% extends 'backoffice/backoffice_template.twig' %}

{% block title %}Modifier le mail utilisateur - {{ parent() }}{% endblock %}

{% block h1 %}Modifier le mail utilisateur{% endblock %}

{% block content %}
    {% if echec is defined %}
        <p>Les adresses mail entrées sont différentes</p>
    {% endif %}
    <form action="{{ base_url() }}backoffice/user/validation/modifier/mail" class="form-horizontal" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="mail">Nouveau mail</label>
            <div class="col-sm-10">
                <input class="form-control" type="mail" name="u_mail"
                       placeholder="Nouveau mail" id="mail" required>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="mail_2">Confirmez le mail</label>
            <div class="col-sm-10">
                <input class="form-control" type="mail" name="u_mail_2"
                       placeholder="Nouveau mail" id="mail_2" required>
            </div>
        </div>
        <button type="submit" class="btn btn-default col-md-offset-11 col-md-1">Valider</button>
    </form>
{% endblock %}