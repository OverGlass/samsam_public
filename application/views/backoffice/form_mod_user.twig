{% extends 'backoffice/backoffice_template.twig' %}

{% block title %}Modifier le mot de passe - {{ parent() }}{% endblock %}

{% block h1 %}Modifier le mot de passe{% endblock %}

{% block content %}
    {% if echec is defined %}
        <p>{{ echec }}</p>
    {% endif %}
    <form action="{{ base_url() }}backoffice/user/validation/modifier/mdp" class="form-horizontal" method="post">
        <div class="form-group">
            <label class="col-sm-2 control-label" for="old_mdp">Ancien mot de passe</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="u_old_mdp"
                       placeholder="Mot de passe" id="old_mdp">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="new_mdp">Nouveau mot de passe</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="u_new_mdp"
                       placeholder="Nouveau mot de passe" id="new_mdp">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="new_mdp_2">VÃ©rifier le mot de passe</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="u_new_mdp_2"
                       placeholder="Nouveau mot de passe" id="new_mdp_2">
            </div>
        </div>
        <button type="submit" class="btn btn-default col-md-offset-11 col-md-1">Valider</button>
    </form>
{% endblock %}